{
  "name": "beautyrefugesalon.com",
  "version": "0.1.0",
  "description": "static site generator for beautyrefugesalon.com",
  "engines": {
    "node": ">=8.1.0"
  },
  "main": "app/server.js",
  "scripts": {
    "start": "npm run watch",
    "start-prod": "npm run build && http-server dist -p 3111 -a localhost -o",
    "lint": "eslint app/** build.js",
    "test": "npm run lint",
    "deploy": "npm run build && node deploy.js",
    "build": "node build.js",
    "uglify-js": "uglifyjs app/js/index.js -o public/js/index.js",
    "less-css": "lessc --clean-css app/styles/index.less public/css/style.css",
    "watch": "nodemon app/server.js & npm run watch-css & npm run watch-js",
    "watch-css": "nodemon --ext less --watch app/styles --exec 'npm run less-css'",
    "watch-js": "nodemon --watch app/js --exec 'npm run uglify-js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BeautyRefuge/beautyrefuge.github.io.git"
  },
  "author": {
    "name": "Greg Jopa",
    "email": "grjopa@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "date-fns": "1.28.5",
    "koa": "2.2.0",
    "koa-favicon": "2.0.0",
    "koa-hbs": "1.0.0",
    "koa-logger": "3.0.0",
    "koa-router": "7.2.0",
    "koa-static": "3.0.0",
    "less": "2.7.2",
    "less-plugin-clean-css": "1.5.1",
    "shelljs": "0.7.8",
    "supertest": "3.0.0",
    "uglify-js": "3.0.16"
  },
  "devDependencies": {
    "eslint": "4.0.0",
    "http-server": "0.10.0",
    "nodemon": "1.11.0"
  }
}
